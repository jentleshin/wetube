mixin videoBlock(video = {})
    .videoBlock
        a.videoBlock__cover-link(href=`/${video.fileUrl}`)
        .videoBlock__thumbnail
            video(src=`/${video.fileUrl}`)
        .videoBlock__info
            h4.videoBlock__title=video.title
            h5.videoBlock__creator
                span
                    a.videoBlock__creator-link(href=routes.userDetail({fullRoute: true, id: video.creator}))=video.creatorName
                span &nbspÂ·&nbsp
                span.videoBlock__views #{video.views} views
