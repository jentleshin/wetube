extends layouts/main.pug
include mixins/videoBlock

block content
    .user-detail
        .user-profile
            .user-profile__img 
                img(src=user.avatarUrl)
            .user-profile__info
                div name
                span=user.name
                div email
                span=user.email
                    if (user.githubId)
                        span &nbsp
                            i.fab.fa-github
                    if (user.facebookId)
                        span &nbsp
                            i.fab.fa-facebook
            if (user._id === currentUser._id)
                form.user-profile__edit(action=routes.editProfile({fullRoute: true}), method="get")
                    button.simple-input Edit Profile
        .user-comments user comments
        .navigator
            h1 UPLOADS
        .videos.user-videos
            each video in videos
                +videoBlock(video)