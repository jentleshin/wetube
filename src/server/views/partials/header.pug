header.header
    .header__icon
        h1
            a(href=routes.home)
                i.fab.fa-youtube
                span  YOUTUBE
    .header__search-bar
        form(action=routes.search, method="get")
            input(type="text", placeholder="SEARCH", name="term", size="30")
    .header__user-navigator
        
        if  !user.isAuthenticated
            ul
                li
                    a(href=routes.join) Join
                li 
                    a(href=routes.login) Log in
        else
            h1.header__user-navigator.header__user-navigator_authenticated
                span #{user.name}
                span  &nbsp···&nbsp 
                span
                    a(href=routes.userDetail({ fullRoute: true, id: user.id})) Profile
                span &nbsp·&nbsp
                span
                    a(href=routes.upload({fullRoute: true})) Upload
                span &nbsp·&nbsp
                span
                    a(href=routes.logout) Logout
