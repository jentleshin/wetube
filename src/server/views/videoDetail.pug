extends layouts/main.pug
include mixins/videoPlayer
include mixins/videoComments


block content
    .videoDetail#jsVideoDetail
        .videoDetail__wrapper#jsVideoDetailWrapper
            +videoPlayer(video)
            .videoDetail__info
                .videoDetail__info-left
                    .videoDetail__avatarUrl-wrapper
                        .videoDetail__avatarUrl
                            img(src=`/${video.creator.avatarUrl}`)
                    .videoDetail__head
                        h4.videoDetail__title=video.title
                        h5.videoDetail__creator
                            span #{video.creator.name}
                .videoDetail__info-right
                    h5#jsViewNum #{video.views}
                        span &nbspviews
                        span &nbspÂ·&nbsp
                        span 2020-10-20
                //- p.videoDetail__description=video.description
                if (isCreator)
                    a.videoDetail__edit-button(href=routes.editVideo({fullRoute: true, id: video.id})) edit video
        +videoComments(video.comments)
            