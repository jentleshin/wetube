extends layouts/main.pug
include mixins/videoBlock

block content
    .videoDetail
        .videoDetail__player
            .videoDetail__player__main
                video(src=`/${video.fileUrl}`, controls='true')
                //- differece between video.fileUrl and `/${video.fileUrl}`
            .videoDetail__player__info
                h4.video__title=video.title
                h5.video__views #{video.views} views
                p.video__description=video.description
                a.video__edit-button(href=routes.editVideo({fullRoute: true, id: video.id})) edit video
        .videoDetail__comments
            if video.comments.length === 0
                span.video__comment-number No comment yet
            else if video.comments.length === 1
                span.video__comment-number 1 comment
            else  
                span.video__comment-number #{video.comments.length} comments